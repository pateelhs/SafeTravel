<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <!--  heading for basic settings -->


        <View
            android:layout_width="fill_parent"
            android:layout_height="20dp"/>

        <!--  macro name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1"
                android:textSize="18dp"
                android:textColor="@color/red"
                android:text="Cause of Alarm"/>

            <Spinner
                android:id="@+id/panicspin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_weight="3"

                android:singleLine="true"/>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Primary Action"
            android:background="@drawable/textbackground"/>

        <EditText
            android:id="@+id/input_comment1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:inputType="textMultiLine"
            android:background="@drawable/textbackground"
            android:hint="Mention action here" />
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_blue_50"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vehicle Number"
                    android:textStyle="bold"
                    android:textColor="#707070"

                    />
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.86"
                    android:gravity="center_horizontal"
                    android:text="\u2022"
                    />

                <TextView
                    android:id="@+id/vehnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text=""
                    />



            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver Name"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.07"
                    android:gravity="center_horizontal"
                    android:text="\u2022"
                    />

                <TextView
                    android:id="@+id/drivname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="name "
                    android:textStyle="bold"
                    android:textColor="#707070"
                    android:layout_weight="0.03" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driver Contact"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:gravity="center_horizontal"
                    android:text="\u2022"
                    />

                <TextView
                    android:id="@+id/drivcontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="123456789"
                    android:textStyle="bold"
                    android:autoLink="phone"
                    android:textColor="#707070"
                    android:layout_weight="0.12" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escort Name"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.47"
                    android:gravity="center_horizontal"
                    android:text="\u2022"
                    />

                <TextView
                    android:id="@+id/escname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="E name"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    android:layout_weight="0.18" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Escort Contact"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.36"
                    android:gravity="center_horizontal"
                    android:text="\u2022"
                    />

                <TextView
                    android:id="@+id/esccontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="108"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    android:autoLink="phone"
                    android:layout_weight="0.23" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendor Name"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.36"
                    android:gravity="center_horizontal"
                    android:text="\u2022"
                    />

                <TextView
                    android:id="@+id/vendorname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="108"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    android:autoLink="phone"
                    android:layout_weight="0.23" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vendor Contact"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.36"
                    android:gravity="center_horizontal"
                    android:text="\u2022"
                    />

                <TextView
                    android:id="@+id/vendorcontact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="108"
                    android:textStyle="bold"
                    android:textColor="#707070"
                    android:autoLink="phone"
                    android:layout_weight="0.23" />

            </LinearLayout>
            <View
                android:layout_width="fill_parent"
                android:layout_height="30dp"/>
        </LinearLayout>
        </ScrollView>


    </LinearLayout>
    <!-- Save & Cancel button -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" >

        <Button
            android:id="@+id/approve"
            android:textColor="#FFFEDE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/buttonshape"
            android:enabled="true"
            android:focusableInTouchMode="false"
            android:text="Stop Panic" />
        <Button
            android:id="@+id/reset"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttonshape"
            android:textColor="#FFFEDE"
            android:layout_weight="1"
            android:text="Cancel"
            android:enabled="true" />
    </LinearLayout>
</RelativeLayout>