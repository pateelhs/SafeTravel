<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
   
    android:scrollbars="vertical" >
    <android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.Booking">

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
     >

    <!--<FrameLayout-->
        <!--android:id="@+id/em1"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:layout_weight="1" >-->

        <!--&lt;!&ndash;<TextView&ndash;&gt;-->
            <!--&lt;!&ndash;android:id="@+id/textView1"&ndash;&gt;-->
            <!--&lt;!&ndash;android:layout_width="match_parent"&ndash;&gt;-->
            <!--&lt;!&ndash;android:layout_height="match_parent"&ndash;&gt;-->
            <!--&lt;!&ndash;android:background="@color/md_red_400"&ndash;&gt;-->
            <!--&lt;!&ndash;android:text="Help Desk"&ndash;&gt;-->
            <!--&lt;!&ndash;android:textSize="30dp"&ndash;&gt;-->
            <!--&lt;!&ndash;android:paddingTop="8dp"&ndash;&gt;-->
            <!--&lt;!&ndash;android:textColor="@color/white_color"&ndash;&gt;-->
            <!--&lt;!&ndash;android:gravity="center_horizontal"/>&ndash;&gt;-->
    <!--</FrameLayout>-->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/person_1" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/ename1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_emer_bg"
            android:ems="50"
            android:textColor="@color/md_red_500"
            android:textSize="20dp"
            android:gravity="center"
            android:hint="NAME"
            android:inputType="text"
            android:textColorHint="#a9a9a9" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/enumber1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_emer_bg"
            android:ems="10"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:gravity="center"
            android:hint="PHONE NUMBER"

            android:autoLink="phone"
            android:textColorHint="#a9a9a9" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/eemail1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_emer_bg"
            android:ems="10"
            android:gravity="center"
            android:hint="E-MAIL ID"
            android:autoLink="email"
            android:drawableLeft="@android:drawable/ic_dialog_email"

            android:textColorHint="#a9a9a9" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bifurcator" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/person_2" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/ename2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_emer_bg"
            android:ems="50"
            android:textSize="20dp"
            android:textColor="@color/md_red_500"
            android:gravity="center"
            android:hint="NAME"
            android:inputType="text"
            android:textColorHint="#a9a9a9" >

        </TextView>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/enumber2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_emer_bg"
            android:ems="10"
            android:autoLink="phone"
            android:gravity="center"
            android:hint="PHONE NUMBER"
            android:inputType="number"
            android:drawableLeft="@android:drawable/ic_menu_call"
            android:textColorHint="#a9a9a9" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/eemail2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/et_emer_bg"
            android:ems="10"
            android:autoLink="email"
            android:gravity="center"
            android:hint="E-MAIL ID"
            android:drawableLeft="@android:drawable/ic_dialog_email"
            android:inputType="textMultiLine|textEmailAddress"
            android:textColorHint="#a9a9a9" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:visibility="gone">

            <Button
                android:id="@+id/savebtn"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/em_btn"
                android:text="SAVE"
                android:textColor="#ffffff" />

            <Button
                android:id="@+id/closebtn"
                android:layout_width="90dp"
                android:layout_height="45dp"
                android:layout_weight="1"
                android:background="@drawable/em_btn"
                android:text="CLOSE"
                android:textColor="#ffffff" />
        </LinearLayout>
    </FrameLayout>

</LinearLayout>
    </android.support.design.widget.CoordinatorLayout>
</ScrollView>