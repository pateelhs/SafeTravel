<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/table_row_layout"
    xmlns:flatui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="200dp">

    <!-- Left column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/modify"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/pending_jobs" />

        <com.agiledge.keocometemployee.utilities.AvantGardeStyleTextView
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="light"
            android:textColor="@color/md_red_400"
            android:id="@+id/left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="Modify" />

    </LinearLayout>

    <!-- Right column -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/booking"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/completed_jobs"
            android:textColor="@android:color/black" />

        <com.agiledge.keocometemployee.utilities.AvantGardeStyleTextView
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="light"
            android:textColor="@color/md_red_400"
            android:id="@+id/right2_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"
            android:text="Booking" />

    </LinearLayout>
    <!-- Right column -->
    <LinearLayout
        android:id="@+id/latebook"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/adhoc"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/bus_icon"
            android:textColor="@android:color/black" />
        <com.agiledge.keocometemployee.utilities.AvantGardeStyleTextView
            flatui:fl_fontFamily="roboto"
            flatui:fl_fontWeight="light"
            android:textColor="@color/md_red_400"
            android:id="@+id/right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textStyle="bold"

            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:text="Shuttle book" />

    </LinearLayout>
</TableRow>